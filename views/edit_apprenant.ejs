<%- include ('./includes/header') %> 
<div class="container">
    <h1><%= title %> </h1>
    <form action="/update" method="post" autocomplete="off">
        <input type="hidden" name="idApprenant" value="<%= apprenant[0].id %> ">
    <div class="form-group">
        <label for="nom">Nom</label>
        <input type="text" class="form-control" id="nom" name="nom" value="<%= apprenant[0].nom %>">
      </div>
      <div class="form-group">
        <label for="lien">Prénom</label>
        <input type="text" class="form-control" id="prenom" name="prenom" value="<%= apprenant[0].prenom %>">
      </div>
      <div class="form-group">
        <label for="type">Option</label>
        <select class="form-control" id="statut" name="option">
          <option value="Réferent-digital">Réferent digital</option>
          <option value="Développeur">Développeur web et web mobile</option>
        </select>
      </div>
      <div class="form-group">
          <button type="submit" class="btn btn-primary">MODIFIER</button>
      </div>
    </form>
    <a class="btn btn-primary" href="/">liste des apprenants</a>
</div>
<%- include ('./includes/footer') %> 
